<div class="row">
    <div class="col-md-6">
        <form>
            <div class="form-group">
                <label for="editTitle">主题</label>
                <input type="text" class="form-control" id="editTitle" placeholder="我的标题" ng-model="article.title"> 
            </div>
            <div class="form-group">
                <label for="editKeys">关键字</label>
                <input type="text" class="form-control" id="editKeys" placeholder="我的关键字，逗号或分号隔开" ng-model="article.keys"> 
            </div>
            <div class="form-group">
                <label for="editContent">内容</label>
                <textarea class="form-control" id="editContent" placeholder="我的内容" ng-model="article.content"/>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <article>
            <header>
                <h1>{{article.title}}</h1>
                <hr>
            </header>
            <details>
                <summary>关键字</summary>
                <span class="badge">{{article.keys}}</span>
                <hr>
            </details>
            <section btf-markdown="article.content">
            </section>
        </article>
    </div>
</div>
<div class="btn_area_1">  
<input id="btnPublish" type="button" class="btn btn-primary" value="立即保存" title="保存文章并留在当前页" ng-click="saveArticle()">
<input id="btnDraft" type="button" class="btn btn-primary" value="发表文章" title="保存并跳转" ng-click="publishArticle()">
<input id="btnCancel" type="button" class="btn btn-primary" value="舍弃">
<span id="sp_note" class="savenote" style="display:none;"></span>
</div>