<div class="row">
  <div class="col-xs-3 side-nav">
    <ul class="nav nav-sidebar">
        <li class="active">
          <a href="/all-topics">全部分类
           <span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span>
          </a>
        </li >
        <li ng-repeat="topic in topics"><a ng-href="/query-article/{{topic.name}}">{{topic.name}}</a></li>
    </ul>
  </div>


    <div class="col-xs-9">
     <form role="navbar-form">
        <div class="form-group">
           <div class="col-xs-6">
             <input  type="text" class="form-control" placeholder="关键字请用空格隔开" ng-model="queryActicleData.keyWords"/>
           </div>
           <div class="col-xs-3">
             <button type="submit" class="btn btn-default">
               <a href="/query-article" ng-click="queryArtilce()">
                 <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
               </a>
             </button> 
          </div> 
        </div>
      </form> 
    </div>

     <div class="col-xs-9 main">
      <h4 class="page-header">{{user.userName}}的当前搜索结果</h4>
      <table class="table table-striped table-hover">
        <thead> 
          <tr class="">
            <th class="tdleft">标题</th>
            <th style="width:50px;">作者</th>
            <th style="width:50px;">状态</th>
            <th style="width:50px;">阅读</th>
            <th style="width:170px;">修改日期</th>
          </tr>
        </thead>
        <tbody>
            <tr ng-repeat="article in articles">
               <td>{{article.title}}</td>
               <td>{{article.author}}</td>
               <td>{{article.status}}</td>
               <td>{{article.visits}}</td>
               <td>{{article.modifyOn}}</td>
            </tr>
           </tbody>
     </table>
     <div class="page_nav"><span> {{articles.length}}条数据  共1页</span><strong>1</strong> </div>
    </div>
    </div>
