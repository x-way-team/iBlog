<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-default">
	        <div class="panel-heading">
	            <h3 class="panel-title">注册用户</h3>
	        </div>
	        <div class="panel-body">
		        <form role="form">
				    <div class="form-group">
				      <label for="SignupUserName">用户名</label>
				      <input id="SignupUserName" type="text" class="form-control" placeholder="Enter Name/Email/Phone number" ng-model="signUpData.userName"/>
				    </div>
				    <div class="form-group">
				      <label for="SignupPassword">密码</label>
				      <input id="SignupPassword" type="password" class="form-control" placeholder="Enter password" ng-model="signUpData.password"/>
				    </div>
				    <div class="form-group">
				      <label for="SignupCfmPassword">再次确认密码</label>
				      <input id="SignupCfmPassword" type="password" class="form-control" placeholder="Enter password again" ng-model="signUpData.cfmPassword"/>
				    </div>
				    <div class="form-group">
				      <label for="SignupCheckCode">验证码</label>
				      <input id="SignupCheckCode" type="text" class="form-control" placeholder="Enter check code" ng-model="signUpData.checkCode"/>
				    </div>
				    <button type="button" class="btn btn-primary btn-lg btn-block" ng-click="signUp()">提交</button>
				</form>
	        </div>
	    </div>
	</div>    
</div>